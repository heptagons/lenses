\newcommand{\pentaconcave}[2]{
 \definecolor{main}{HTML}{#1}
 \begin{scope} \draw[main] (0,0) -- (#2,0); %1
  \begin{scope}[shift={(#2,0)},rotate=72] \draw[main] (0,0) -- (#2,0); %2
   \begin{scope}[shift={(#2,0)},rotate=180-36] \draw[main] (0,0) -- (#2,0); %3
    \begin{scope}[shift={(#2,0)},rotate=-72] \draw[main] (0,0) -- (#2,0); %4
     \begin{scope}[shift={(#2,0)},rotate=180-36] \draw[main] (0,0) -- (#2,0); %5
     \end{scope}
    \end{scope}
   \end{scope}
  \end{scope}
 \end{scope}
}

