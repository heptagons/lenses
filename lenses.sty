 \begin{scope}[rotate=108,shift={(#1,0)}]
  \begin{scope}[rotate=-108]
    \ifthenelse{#2=0}{ }{
     \pgfmathsetmacro\cx{(#1*cos(36)}
     \letterId{\cx}{0}{c}
    }
  \end{scope}
  \begin{scope}[rotate=-72] \draw (0,0) -- (#1,0);
   \begin{scope}[shift={(#1,0)},rotate=-72] \draw (0,0) -- (#1,0);
   \end{scope}
  \end{scope}
 \end{scope}
}

